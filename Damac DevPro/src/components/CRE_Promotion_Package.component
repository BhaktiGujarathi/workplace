                console.log('blnValue was true*******'+blnValue);
                $(event).css("border", "");
            }else{
                console.log('blnValue was false*******'+blnValue);
                $(event).css("border", "2px solid red");
                $('.submit').attr('disabled','disabled');
            }
        }
        
        function resetCheckboxes(event){
            console.log('evt*******'+$(event));
            console.log('*******'+$(event).is(":checked"));
            if($(event).is(":checked") == true){
                $('.checkbox').each(function(){
                    $(this).prop("checked",false);
                });
                $(event).prop("checked",true);
                promoAgreeDsiableButton(false);
            }else{
                promoAgreeDsiableButton(true);
            }
        }
        
