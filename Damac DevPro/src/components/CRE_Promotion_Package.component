        function validateDocumentCompleteness(){
            var buyerValid = false;
            if($(".buyerPOAChk").is(":checked") == true){
                if($('.buyerPurpose').val().trim() != '' && $('.inputFileBuyerPOA').val().trim() != ''){
                    buyerValid = true;
                }
