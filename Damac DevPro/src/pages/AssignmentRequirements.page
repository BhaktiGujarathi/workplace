<apex:page controller="assignmentProcessController">
	<html xmlns="http://www.w3.org/2000/svg"
		xmlns:xlink="http://www.w3.org/1999/xlink" lang="en">
<head>
<meta charset="utf-8" />
<meta http-equiv="x-ua-compatible" content="ie=edge" />
<title>Tenant Status Matrix Grid</title>
<meta name="viewport" content="width=device-width, initial-scale=1" />
<!-- Import the Design System style sheet -->
<!--<apex:stylesheet value="{!URLFOR($Resource.rssSLDS,'assets/styles/salesforce-lightning-design-system-vf.min.css')}" />-->
<apex:slds />
</head>
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<apex:form >
	<body>
		<div class="slds-scope">

			<table id="verification"
				class="slds-table slds-table_bordered slds-table_cell-buffer slds-table_col-bordered slds-table_striped verification">
				<thead>
					<tr class="slds-text-title_caps">
						<th scope="col" colspan="12">
							<div class="slds-hyphenate" title="Verify the Tenant"
								align="center">
								<b>SERVICE REQUEST - TRANSFER OF OWNERSHIP</b>
							</div>
						</th>
					</tr>
				</thead>
				<tr class="slds-text-title_caps">

					<th scope="col" colspan="6">
						<div class="slds-hyphenate" title="Verify the Landlord"
							align="left">
							<b>Payment Type</b>
						</div>
					</th>
					<th scope="col" colspan="6">
						<div class="slds-hyphenate" title="Verify the Landlord"
							align="left">
							<b>Amount Due</b>
						</div>
					</th>
				</tr>
				<apex:repeat value="{!lstPayments}" var="pay">
					<tr class="slds-text-title_caps">
						<td scope="col" colspan="6">
							<div class="slds-hyphenate" title="Verify the Tenant"
								align="left">{!pay.strType}</div>
						</td>
						<td scope="col" colspan="6">
							<div class="slds-hyphenate" title="Verify the Tenant"
								align="right">AED {!pay.decAmount}</div>
						</td>
					</tr>
				</apex:repeat>
				<tr class="slds-text-title_caps">
					<td scope="col" colspan="6">
						<div class="slds-hyphenate" title="Verify the Tenant" align="left">
							<b>Total Amount to be paid</b>
						</div>
					</td>
					<td scope="col" colspan="6">
						<div class="slds-hyphenate" title="Verify the Tenant"
							align="right">
							<b>AED {!decTotal}</b>
						</div>
					</td>
				</tr>
				<tr></tr>
				<tr></tr>
				<tr class="slds-text-title_caps">
					<th scope="col" colspan="6">
						<div class="slds-hyphenate" title="Verify the Tenant" align="left">
							<b>Documents Required</b>
						</div>
					</th>
					<th scope="col" colspan="6">
						<div class="slds-hyphenate" title="Verify the Tenant" align="left">
							<b>Mandatory</b>
						</div>
					</th>
				</tr>
				<apex:repeat value="{!lstDocs}" var="doc">
					<tr class="slds-text-title_caps">
						<td scope="col" colspan="6">
							<div class="slds-hyphenate" title="Verify the Tenant"
								align="left">{!doc.strType}</div>
						</td>
						<td scope="col" colspan="6">
							<div class="slds-hyphenate" title="Verify the Tenant"
								align="right">{!doc.strRequired}</div>
						</td>
					</tr>
				</apex:repeat>

				<tr class="slds-text-title_caps">
					<td colspan="3"><apex:commandButton action="{!redAssignmentDocVerify}" value="Pay Dues"
							styleClass="slds-button slds-button--brand" /></td>
					<td colspan="3"><apex:commandButton action="{!redAssignmentDocVerify}" value="Next"
							styleClass="slds-button slds-button--brand" /></td>
					<td colspan="3"><apex:commandButton action="{!redAssignmentDocVerify}" value="Download"
							styleClass="slds-button slds-button--brand" /></td>
				</tr>
			</table>
		</div>
	</body>
</apex:form>
	</html>
</apex:page>