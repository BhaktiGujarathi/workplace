<apex:page standardStylesheets="false" sidebar="false" showHeader="false">
<style>
        #filter {
            display: none;
            position: fixed;
            top: 0%;
            left: 0%;
            width: 100%;
            height: 100%;
            background-color: #ffffff;
            z-index: 10;
            opacity: 0.6;
            filter: alpha(opacity=50);
        }
        
        .sideBarFixed {
            position: absolute!important;
        }
        
        .fontColor {
            color: black;
        }
    </style>
    <apex:form id="parentPanel">
    <div id="filter"></div>
        <apex:actionStatus id="blockUI" onStart="startProcess();" onStop="endProcess();" />
        <apex:image url="{!URLFOR($Resource.Spinner,'')}" id="loadingdetail" style="width:50px;height:50px;display:none;position:fixed;top:50%;left:50%;z-index:10;" />
    <c:AssignmentCRE />
    </apex:form>
    <script>
function startProcess(){
    document.getElementById('{!$Component.AssignmentCRE.parentPanel.loadingdetail}').style.display = 'block';
    document.getElementById('filter').style.display = 'block';
}

function endProcess(){
    document.getElementById("{!$Component.AssignmentCRE.parentPanel.loadingdetail}").style.display = 'none';
    document.getElementById('filter').style.display = 'none';
}
</script>
</apex:page>