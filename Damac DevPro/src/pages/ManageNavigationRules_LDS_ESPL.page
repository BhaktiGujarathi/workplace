            </apex:pageblock>
            <apex:pageblock html-class="slds-panel" id="RelListActPB" title="Navigation Rule Action" rendered="{!IF(lstPgActns!=null && lstPgActns.size>0,true,false)}">
                <apex:pageblocktable styleClass="slds-table slds-table--bordered slds-table--cell-buffer" value="{!lstPgActns}" var="Act">
                    <apex:column headervalue="Navigation Rule">
                        <apex:outputfield value="{!Act.Page_Navigation_Rule__c}"/>
                    </apex:column>
