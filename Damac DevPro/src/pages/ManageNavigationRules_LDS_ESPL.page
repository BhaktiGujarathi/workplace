                    </apex:column>
                    <apex:column headervalue="Field Name">
                        <apex:inputfield styleClass="slds-input" value="{!Con.Field_Name__c}"/>
                    </apex:column>
                    <apex:column headervalue="Operator">
                        <apex:inputfield styleClass="slds-input" value="{!Con.Operator__c}"/>
                    </apex:column>
                    <apex:column headervalue="Value">
                        <apex:inputfield styleClass="slds-input" value="{!Con.Value__c}"/>
                    </apex:column>
                    <apex:column headervalue="Action" id="ActConCol">
                        <apex:commandlink styleClass="slds-button slds-button--neutral" value="Remove" id="RemoveLnk" onclick="RemoveCond(document.getElementById('{!$Component.ActConCol}').parentNode.rowIndex);return false;"/>
                    </apex:column>
