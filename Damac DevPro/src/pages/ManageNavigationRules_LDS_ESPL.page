                    <apex:commandbutton styleClass="slds-button slds-button--neutral" id="AddCond" value="Add Navigation Condition" action="{!AddCondition}" status="pleasewait" rerender="RelListPnl" onclick="DisableButtons();" oncomplete="EnableButtons();"/>
                    <apex:commandbutton styleClass="slds-button slds-button--neutral" id="SaveCond" value="Save Conditions & Action" onclick="saveConActns();return false;"/>
                    <apex:commandbutton styleClass="slds-button slds-button--neutral" id="CondCancel" value="Cancel" status="pleasewait" action="{!CancelCondActions}" rerender="RulesPB,btnsPnl,RelListPnl"/>
                </apex:pageblockbuttons>
