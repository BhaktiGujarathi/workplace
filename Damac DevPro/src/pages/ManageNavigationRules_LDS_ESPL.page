    <apex:form styleClass="slds-form" id="RulesFrm">
        <apex:actionfunction status="pleasewait" name="AddRuleFunc" action="{!AddRule}" rerender="RulesPB,btnsPnl,RelListPnl"/>
        <apex:actionfunction status="pleasewait" name="SaveConditionsActions" action="{!SaveCondition}" rerender="RulesPB,btnsPnl,RelListPnl" oncomplete="EnableButtons();"/>
        <apex:actionfunction status="pleasewait" name="DelCond" action="{!RemoveCondition}" rerender="RulesPB,btnsPnl,RelListPnl" oncomplete="EnableButtons();"/>
        <apex:inputhidden value="{!CondRowIndex}" id="hdnCondIndex"/>
        <apex:pageblock html-class="slds-panel" title="Navigation Rules" id="RulesPB">
            <apex:pageblockbuttons styleClass="slds-button" id="btnsPnl" location="top">
                 <apex:commandbutton styleClass="slds-button slds-button--neutral" id="btnAddLine" value="Add Navigation Rule" onclick="ClickOnAddline('{!lstNavRules.size}');return false;"/>
                 <apex:commandbutton styleClass="slds-button slds-button--neutral" id="backButton" value="Back to Section Detail" action="{!Back_to_SectionDetail}" status="pleasewait"/>
            </apex:pageblockbuttons>
            <apex:pageblocktable styleClass="slds-table slds-table--bordered slds-table--cell-buffer" value="{!lstNavRules}" var="rule" id="RulesTbl">
                <apex:column headervalue="Action" id="ActCol" style="width:110px;background:{!IF(strNavigRuleId==rule.objRule.Id,'#C2F5F3','')};">
                    <apex:outputpanel layout="block" rendered="{!!rule.isEdit}">
                        <apex:commandlink styleClass="slds-button slds-button--neutral" value="Edit" id="editlnk" action="{!EditPGRule}" status="pleasewait" rerender="RulesPB,btnsPnl,RelListPnl">
                            <apex:param name="hdnEditRowIndex" value="{!rule.RuleIndex}" assignTo="{!RuleIndex}"/>
                        </apex:commandlink>
                        <apex:outputLabel id="EditDelLbl">&nbsp;|&nbsp;</apex:outputLabel>
                        <apex:commandlink styleClass="slds-button slds-button--neutral" value="Del" action="{!DelPGRule}" status="pleasewait" rerender="RulesPB,btnsPnl,RelListPnl">
                            <apex:param name="hdnDelRowIndex" value="{!rule.objRule.Id}" assignTo="{!strNavigRuleId}"/>
                        </apex:commandlink>
                        <apex:outputLabel id="ManageLbl">&nbsp;|&nbsp;</apex:outputLabel>
                        <apex:commandlink styleClass="slds-button slds-button--neutral" value="Manage" action="{!ManagePGRule}" status="pleasewait" rerender="RulesPB,btnsPnl,RelListPnl">
                            <apex:param name="RuleId" value="{!rule.objRule.Id}" assignTo="{!strNavigRuleId}"/>
                        </apex:commandlink>
                    </apex:outputpanel>
                    <apex:outputpanel id="SavePnl" layout="block" rendered="{!rule.isEdit}">
                        <apex:commandlink styleClass="slds-button slds-button--neutral" value="Save" id="savelnk" action="{!SavePGRule}" status="pleasewait" rerender="RulesPB,btnsPnl,RelListPnl">
                            <apex:param name="hdnSaveRowIndex" value="{!rule.RuleIndex}" assignTo="{!RuleIndex}"/>
                        </apex:commandlink>
                        <apex:outputLabel id="SaveCanclLbl">&nbsp;|&nbsp;</apex:outputLabel>
                        <apex:commandlink styleClass="slds-button slds-button--neutral" value="Cancel" action="{!CancelPGRule}" status="pleasewait" rerender="RulesPB,btnsPnl,RelListPnl">
                            <apex:param name="hdnCnclRowIndex" value="{!rule.RuleIndex}" assignTo="{!RuleIndex}"/>
                        </apex:commandlink>
                    </apex:outputpanel>
                </apex:column>
                <apex:column headerValue="Rule Name" style="background:{!IF(strNavigRuleId==rule.objRule.Id,'#C2F5F3','')};width:200px;">
                    <apex:inputfield styleClass="slds-input" value="{!rule.objRule.Rule_Name__c}" rendered="{!rule.isEdit}" />
                    <apex:outputfield value="{!rule.objRule.Rule_Name__c}" rendered="{!!rule.isEdit}" style="width:95%;"/>
                </apex:column>
                <apex:column headervalue="Rule Description" style="background:{!IF(strNavigRuleId==rule.objRule.Id,'#C2F5F3','')};width:375px;">
                     <apex:inputfield styleClass="slds-input" value="{!rule.objRule.Rule_Description__c}" rendered="{!rule.isEdit}" style="height : 10px;"/>
                     <apex:outputfield value="{!rule.objRule.Rule_Description__c}" rendered="{!!rule.isEdit}" style="width:95%;"/>
                </apex:column>
                <apex:column headervalue="Rule Condition" style="background:{!IF(strNavigRuleId==rule.objRule.Id,'#C2F5F3','')};width:450px;">
                    <!--<apex:inputfield styleClass="slds-input" value="{!rule.objRule.Rule_Condition__c}" rendered="{!rule.isEdit}" /> -->
                    <apex:outputfield value="{!rule.objRule.Rule_Condition__c}" style="width:95%;"/>
                </apex:column>
            </apex:pageblocktable>
        </apex:pageblock>
        
