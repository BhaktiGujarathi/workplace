<apex:page standardController="SR_Attachments__c" tabStyle="Case"
    extensions="CaseAttachmentController">
    <apex:slds />
    <div class="slds-scope">
    <apex:sectionHeader title="Upload New Documents" subtitle="Attach File" />
    <apex:form id="form_Upload">
        <apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton action="{!back}" value="Back" />
                <!--    <apex:commandButton action="{!back}" value="Cancel"/> -->
            </apex:pageBlockButtons>
            <apex:pageMessages />
            <apex:pageBlockSection columns="1">
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="File" for="file_File" />
                    <apex:outputpanel >
                        <apex:inputFile id="file_File" value="{!fileBody}"
                            filename="{!fileName}"
                            rendered="{!ISNULL(objSRAttach.Attachment__c)}" 
                            required="{!objSRAttach.IsRequired__c}"/>
                        <apex:outputText value="{!objSRAttach.Name}"
                            rendered="{!NOT(ISNULL(objSRAttach.Attachment__c))}" />
                    </apex:outputpanel>
                </apex:pageBlockSectionItem>

                <!--     <apex:pageBlockSectionItem > -->
                <!--       <apex:outputLabel value="Type" for="type"/> -->
                <!--       <apex:selectList value="{!selectedType}" size="1" id="type">  -->
                <!--         <apex:selectOption itemValue="" itemLabel="--None--"/> -->
                <!--         <apex:selectOption itemValue="Passport" itemLabel="Passport"/> -->
                <!--         <apex:selectOption itemValue="Signature" itemLabel="Signature"/> -->
                <!--         <apex:selectOption itemValue="ABCD" itemLabel="ABCD"/> -->
                <!--         <apex:selectOption itemValue="SPA" itemLabel="SPA"/> -->
                <!--       </apex:selectList> -->
                <!--     </apex:pageBlockSectionItem> -->

                <apex:pageBlockSectionItem rendered="{!objSRAttach.IsRequired__c}">
                    <apex:outputLabel value="Is the file Required?" for="visible" />
                    <apex:outputLabel value="Yes"/>
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem rendered="{!NOT(objSRAttach.IsRequired__c)}">
                    <apex:outputLabel value="Is the file Required?" for="visible" />
                    <apex:outputLabel value="No"/>
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Is the file Valid?" for="visible" />
                    <apex:selectList value="{!selectedAwesomeness}" size="1"
                        id="visible">
                        <apex:selectOptions value="{!lstOptions}"/>
                    </apex:selectList>
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Signed by DAMAC" for="SignedDamac" />
                    <apex:selectList value="{!damacSigned}" size="1"
                        id="SignedDamac">
                        <apex:selectOptions value="{!lstOptions}"/>
                    </apex:selectList>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Need Correction" for="needCorrection" />
                    <apex:selectList value="{!needCorrection}" size="1"
                        id="needCorrection">
                        <apex:selectOptions value="{!lstOptions}"/>
                    </apex:selectList>
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="Description" for="description" />
                    <apex:inputTextarea id="description"
                        value="{!objSRAttach.Description__c}" rows="4" cols="50" />
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem rendered="{!NOT(ISNULL(objSRAttach.Attachment__c))}">
                    <apex:outputlabel value=""/>
                    <apex:commandButton value="Update Details" action="{!updateDetails}" />
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem rendered="{!ISNULL(objSRAttach.Attachment__c)}">
                    <apex:outputlabel value=""/>
                    <apex:commandButton id="uploadBtn" value="Attach File"
                        action="{!processUpload}"/>
                </apex:pageBlockSectionItem>

            </apex:pageBlockSection>

        </apex:pageBlock>
    </apex:form>
    </div>
</apex:page>