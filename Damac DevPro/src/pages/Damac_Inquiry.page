    <apex:actionStatus id="pleasewait" stopText="">
        <apex:facet name="start">
            <div>
            <!-- to disable whole page when user clicks on next button  -->
                <div class="popupBackground override-bg"></div>
                <div class="PopupPanel">
                    <img src="{!$Resource.Portal_Loading_Image}" style="height:80%;width:80%"/>
                </div>
            </div>
        </apex:facet>
    </apex:actionStatus>
    <div class="global-wrapper content-bg">
        <apex:insert name="body slds">
            <apex:form id="inquiry-form">
                <apex:actionFunction name="loadData" action="{!loadCILData}" status="pleasewait" oncomplete="setURL();" reRender="inquiryList,scriptTag">
                </apex:actionFunction>
                <section class="global-content-w-footer" id="inquiry-section">
                    <div class="slds-container--large " style="background: #FFFFFF; padding-top:10px">
                       
                        <apex:outputPanel id="inquiryList" layout="block" styleClass="height-100vh">
                          <div class="table-responsive ">
                            <table class="table responsive custom-table">
                            <thead>

                                <tr>
                                    
                                    <apex:repeat value="{!$ObjectType.Inquiry__c.FieldSets.CIL_List}" var="DetailsList">
                                        <th>
                                            {!DetailsList.Label}
                                        </th>
                                    </apex:repeat>
                                    <th style="width:20px !important;min-width:20px !important;text-align:center" class="no-bg-image">Action</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                <apex:repeat var="dataList" value="{!CILLists}">
                                    <tr>
                                        
                                        <apex:repeat var="f" value="{!$ObjectType.Inquiry__c.FieldSets.CIL_List}">
                                            <td>
                                                <apex:outputField value="{!dataList[f]}" />
                                            </td>
                                        </apex:repeat>
                                        <td style="text-align:center">
                                            <a href="{!$Site.Prefix}/{!dataList['Id']}/e?retURL=/Damac_Inquiry?sfdc.tabName={!tabName}&RecordType={!inquiryRecordTypeId}" style="max-width:10vw;color:#0D80FC">
                                            <!--<img src="{!URLFOR($Resource.AgentPortal_Resources, 'assets/images/edit.svg')}" style="height:20px;width:30px"/>-->
                                                Edit |
                                            </a>
                                            <a href="{!$Site.Prefix}/{!dataList['Id']}" style="max-width:10vw;color:#0D80FC">
                                                
                                                View
                                            </a>
                                        </td>
                                        
                                    </tr>
                                </apex:repeat>
                            </tbody>
                            </table>
                           </div>   
                        </apex:outputPanel>     
                    </div>
                </section>
            </apex:form>
        </apex:insert>
    </div>
    
