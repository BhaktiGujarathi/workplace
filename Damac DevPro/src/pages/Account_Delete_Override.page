<apex:page id="myPage" standardController="Account" extensions="Account_Edit_Delete_Override_Controller" sidebar="false" showHeader="false">
    <script>
    
    if ( {!canDeleteRecord} ) {
        window.parent.location.href = "{!URLFOR($Action.Account.Delete,Account.id,[retURL=$Request.retURL],true)}";
    } else {
        alert("You are not allowed to delete the Agency.");
        window.history.go(-1);
    }
    </script>
</apex:page>