<apex:page sidebar="false" showHeader="false" controller="DamacLoginController" applyBodyTag="false" applyHtmlTag="false" showChat="false" showQuickActionVfHeader="false" standardStylesheets="false" cache="true" expires="0" action="{!redirectToHome}">
<html>
    <head>
        <link rel="shortcut icon" href="{!URLFOR($Resource.Inquiry_Resources,'assets_inquiry/images/favicon.ico')}" type="image/x-icon"/> 
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta content="utf-8" http-equiv="encoding"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>DAMAC Agent Portal- Login</title>
        <apex:stylesheet value="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
        <apex:stylesheet value="{!URLFOR($Resource.AgentPortal_Resources, 'assets/css/salesforce-lightning-design-system-vf.css')}" />

        <apex:stylesheet value="{!URLFOR($Resource.AgentPortal_Resources, 'assets/css/damac-theme.css')}" />

        
    </head>
<body >
    <div class="global-wrapper body-bg">
        <apex:insert name="body">
            <section class="global-content" id="login-section" style="padding:7% 0px">
                <div class="slds">
                    <apex:form id="loginForm" forceSSL="true">

                        <section class="slds-text-align--center slds-p-around-small banner-tint" role="banner" style="padding-bottom:55px">
                            
                            <div class="slds-container--center slds-container--small slds-p-around--x-large slds-size--1-of-1  slds-medium-size--4-of-12 slds-large-size--4-of-12">
                                <div class="slds-p-around--small">
                                    <img src="{!URLFOR($Resource.AgentPortal_Resources, 'assets/images/logo.png')}"/>

                                </div>
                                <div class="slds-p-around--small uppercase text-xx-large text-color-white">
                                    live the luxury
                                </div>
                                <div class="slds-p-around--small">
                                    <div class="slds-form--stacked slds-text-align--left">
                                        <apex:pageMessages id="messages"></apex:pagemessages>
                                        <div class="slds-form-element padding-top-bottom-5">
                                        
                                            <div class="slds-form-element__control">
                                              <apex:inputText id="username" value="{!username}" styleClass="slds-input input-textbox-large" html-placeholder="User Name"/>
                                            </div>
                                        </div>
                                        <div class="slds-form-element padding-top-bottom-5">
                                            <div class="slds-form-element__control">
                                                <apex:inputSecret id="password" value="{!password}" styleClass="slds-input input-textbox-large" redisplay="true" html-placeholder="Password"/> 
                                            </div>
                                        </div>
                                    </div>
                                    <div class="padding-top-bottom-5" style="padding-top:10px">
                                        <apex:commandButton action="{!login}" reRender="messages" value="Log in" id="loginButton" styleClass="slds-button slds-button--neutral slds-button--override" oncomplete="ShowApexMessages();"/>
                                    </div>
                                    <div class="slds-form-element__control slds-text-align--left padding-top-bottom-5" >
                                        <label class="slds-checkbox">
                                            <apex:inputCheckbox value="{!rememberMe}" id="remember-me"/>
                                            <span class="slds-checkbox--faux"></span>
                                            <span class="slds-form-element__label text-color-white text-medium padding-right-left-10">Remember me</span>
                                        </label>
                                        <apex:outputLink value="{!URLFOR($Page.Damac_ForgotPassword,null)}" styleClass="slds-float--right text-medium text-color-primary">Forgot Password?</apex:outputLink>
                                    </div>
                                </div>
                            </div>
                            <!--<div class="slds-container--center slds-size--1-of-1 slds-medium-size--7-of-12 slds-large-size--7-of-12">
                                 <div class="slds-p-left--medium slds-p-right--medium"><hr/></div>
                                <div class="slds-clearfix slds-p-left--medium slds-p-right--medium slds-p-bottom--medium slds-float--right">
                                    <p class="text-color-white text-medium padding-right-left-10" style="display:inline-block">New to this portal? </p>
                                    <apex:outputLink value="{!$Label.Site_Label}/apex/Process_Flow?FlowId={!registrationPageID}" styleClass="text-medium text-color-primary " style="display:inline-block">
                                        Register >
                                    </apex:outputLink>
                                </div>
                            </div>-->
                        </section>
                    </apex:form>
                </div>
            </section>
           
        </apex:insert>
    </div>
    <script src="{!URLFOR($Resource.AgentPortal_Resources, 'assets/js/alerts.js')}"></script>
    <script src="{!URLFOR($Resource.AgentPortal_Resources, 'assets/js/jquery.min.js')}"></script>
    <script>
        function ShowApexMessages()
    {    
        if($('[id$=messages]').text() != '')
        {    
              var msg = $('[id$=messages]').text();              
              if(msg.search("Success:") >= 0){
                  $('[id$=messages]').hide();
                  
                 notie.alert(1,$('[id$=messages]').text().replace('Success:',''),10);
              }
              else
              {
                 $('[id$=messages]').hide();
                 notie.alert(3,$('[id$=messages]').text().replace('Error:','').replace('Errors',''),10);
              }
        }

    }
    </script> 
</body>

</html>
</apex:page>