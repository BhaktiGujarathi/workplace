<apex:page docType="html-5.0" controller="HomePagePortfolioIManage"
    showHeader="false" sidebar="false" title="pratiksha"
    standardStylesheets="false">
    <link
        href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
        rel="stylesheet" />
    <script
        src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script
        src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <style>
.borderless td, .borderless th {
    border: none !important;
}
.bPageBlock{
border:none !important;
}
::-webkit-scrollbar {
    width: 12px;
}
 
::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
    border-radius: 10px;
}
 
::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5); 
}
span i{
    color: #2576ba;
    margin: 0px 2px;
}
.table>tbody>tr>td{
color:gray;
}
thead {
    background-color: #16a4fa !important;
    color: #fff;
    padding: 15px !important;
    border: 1px solid #16a4fa;
    font-weight: 100;
}
td{
color:gray important;
}
header {
    background-color: #2576ba;
}

td, table {
    border: none !important;
}
</style>
    <apex:form id="MyForm">
        <apex:pageblock >
            <div class='tblcontent'>
                <apex:pageBlockSection columns="1">
                    <apex:dataTable value="{!listAccounts}" var="A" border="1"
                        rowClasses="odd,even" styleClass="table borderless"
                        cellpadding="3">'
                    <apex:column >
                            <apex:image value="{!$Resource.HomepageSmiley}" height="25"
                                styleclass="img-circle" />
                        </apex:column>
                        <apex:column >
                            <apex:facet name="header">Name</apex:facet>
                            <span onclick="window.open('{!A.NameLink}');"
                                style="cursor: pointer;">{!A.Name} </span>
                        </apex:column>
                        <apex:column >
                            <apex:facet name="header">WORTH</apex:facet>
                            <apex:OutputText value="{!A.Value}" />
                        </apex:column>
                        <apex:column >
                            <apex:facet name="header">Class</apex:facet>
                            <apex:image value="{!A.ClassName}" height="25"
                                styleclass="img-circle" />
                            <!-- {!A.ClassName} -->
                        </apex:column>
                        <apex:column >
                            <apex:facet name="header">Units</apex:facet>
                            <apex:OutputText value="{!A.Units}" />
                        </apex:column>
                        <apex:column >
                            <apex:facet name="header">Value</apex:facet>
                            <apex:OutputText value="{!A.Value}" />
                        </apex:column>
                        <apex:column >
                            <apex:facet name="header">Whats Next</apex:facet>
                            <apex:OutputText value="{!A.WhatsNext}" />
                        </apex:column>
                        <apex:column >
                            <apex:facet name="header">Support Status</apex:facet>
                            <apex:OutputText value="{!A.SupportStatus}" />
                        </apex:column>
                        <apex:column >
                            <apex:facet name="header">Actions</apex:facet>
                            <span><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
                            <span><i class="fa fa-phone" aria-hidden="true"></i></span>
                            <span><i class="fa fa-folder" aria-hidden="true"></i></span>
                            <span><i class="fa fa-cog" aria-hidden="true"></i></span>
                        </apex:column>
                    </apex:dataTable>
                </apex:pageBlockSection>
            </div>
        </apex:pageblock>
    </apex:form>
</apex:page>