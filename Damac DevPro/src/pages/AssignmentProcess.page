<apex:page controller="assignmentProcessController">
    <html xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink" lang="en">
<head>
<meta charset="utf-8" />
<meta http-equiv="x-ua-compatible" content="ie=edge" />
<title>Tenant Status Matrix Grid</title>
<meta name="viewport" content="width=device-width, initial-scale=1" />
<!-- Import the Design System style sheet -->
<apex:slds />
</head>
<script
    src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<apex:form >
    <body>
        <div class="slds-scope">
            <table id="initiation"
                class="slds-table slds-table_bordered slds-table_cell-buffer slds-table_col-bordered slds-table_striped initiation">
                <thead>
                    <tr class="slds-text-title_caps">
                        <th scope="col" colspan="12">
                            <div class="slds-hyphenate" title="Verify the Tenant"
                                align="center">
                                <b>Service Request - Transfer of Ownership</b>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tr class="slds-text-title_caps">
                    <td scope="col" colspan="6">
                        <div class="slds-hyphenate" title="Verify the Tenant"
                            align="center">
                            <span style="color:red;font-weight:bold">*</span>
                            <b>Unit to be transferred</b>
                        </div>
                    </td>
                    <td scope="col" colspan="6">
                    <apex:selectList value="{!strSelectedUnit}" multiselect="false" size="1"
                            styleClass="slds-select" required="true">
                            <apex:selectOptions value="{!lstUnits}" />
                        </apex:selectList>
                    </td>
                </tr>

                <tr class="slds-text-title_caps">
                    <td scope="col" colspan="6">
                        <div class="slds-hyphenate" title="Verify the Tenant"
                            align="center">
                            <span style="color:red;font-weight:bold">*</span>
                            <b>Buyer Type</b>
                        </div>
                    </td>
                    <td scope="col" colspan="6"><apex:inputField required="true" value="{!objCase.Buyer_Type__c}" styleClass="slds-select" />
                    </td>
                </tr>
                <tr class="slds-text-title_caps">
                    <td scope="col" colspan="6">
                        <div class="slds-hyphenate" title="Verify the Tenant"
                            align="center">
                            <span style="color:red;font-weight:bold">*</span>
                            <b>Relationship with Seller</b>
                        </div>
                    </td>
                    <td scope="col" colspan="6"><apex:inputField required="true" value="{!objCase.Relationship_with_Seller__c}"
                            styleClass="slds-select" />
                    </td>
                </tr>
                <tr class="slds-text-title_caps">
                    <td scope="col" colspan="6">
                        <div class="slds-hyphenate" title="Verify the Tenant"
                            align="center">
                            <span style="color:red;font-weight:bold">*</span>
                            <b>Case Type</b>
                        </div>
                    </td>
                    <td scope="col" colspan="6"><apex:inputField required="true" value="{!objCase.Case_Type__c}" styleClass="slds-select" />
                    </td>
                </tr>
                <tr class="slds-text-title_caps">
                    <td scope="col" colspan="6">
                        <div class="slds-hyphenate" title="Verify the Tenant"
                            align="center">
                            <b>Seller POA</b>
                        </div>
                    </td>
                    <td scope="col" colspan="6"><apex:inputField value="{!objCase.Seller_POA__c}" />
                    </td>
                </tr>
                <tr class="slds-text-title_caps">
                    <td scope="col" colspan="6">
                        <div class="slds-hyphenate" title="Verify the Tenant"
                            align="center">
                            <b>Buyer POA</b>
                        </div>
                    </td>
                    <td scope="col" colspan="6"><apex:inputField value="{!objCase.Buyer_POA__c}" />
                    </td>
                </tr>
                <tr class="slds-text-title_caps">
                    <th scope="col" colspan="12">
                        <div align="right">
                            <apex:commandButton action="{!redAssignmentReq}"
                                value="View Requirements for Transfer of Ownership"
                                styleClass="slds-button slds-button--brand" />
                        </div>
                    </th>
                </tr>
            </table>
        </div>
    </body>
</apex:form>
</html>
</apex:page>