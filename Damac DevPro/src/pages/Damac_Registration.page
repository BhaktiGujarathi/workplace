<apex:page sidebar="false" showHeader="false" controller="DamacLoginController" applyBodyTag="false" applyHtmlTag="false" showChat="false" showQuickActionVfHeader="false" standardStylesheets="false" cache="true" expires="0">
<html>
    <head>
    	<link rel="shortcut icon" href="{!URLFOR($Resource.Inquiry_Resources,'assets_inquiry/images/favicon.ico')}" type="image/x-icon"/>
    	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    	<meta content="utf-8" http-equiv="encoding"/>
    	<meta name="viewport" content="width=device-width, initial-scale=1"/>
    	<title>DAMAC Agent Portal- Registration</title>
    	<apex:stylesheet value="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    	<apex:stylesheet value="{!URLFOR($Resource.AgentPortal_Resources, 'assets/css/salesforce-lightning-design-system-vf.css')}" />

    	<apex:stylesheet value="{!URLFOR($Resource.AgentPortal_Resources, 'assets/css/damac-theme.css')}" />
    	<style type="text/css">
    		.subcontainer{
    			background:#FFFFFF !important;
    		}
    	</style>

    </head>
<body >
	<div class="global-wrapper content-bg">
		<apex:insert name="body">
			<div class="header slds">
				<div class="slds-grid slds-wrap slds-wrap-override banner-tint slds-p-around--small">
					<div class="slds-size--8-of-12 slds-small-size--10-of-12 slds-medium-size--10-of-12 align-flex-center">
						<img class="slds-size--1-of-1 slds-small-size--1-of-6 slds-medium-size--1-of-6" src="{!URLFOR($Resource.AgentPortal_Resources, 'assets/images/logo.png')}"/>
					</div>
					<div class="slds-size--4-of-12 slds-small-size--2-of-12 slds-medium-size--2-of-12">
                    	<p class="text-color-white text-medium padding-right-left-5" style="display:inline-block">Already A Member? </p>
                        <apex:outputLink value="{!URLFOR($Page.Damac_Login,null)}" styleClass="text-medium text-color-primary padding-right-left-5" style="display:inline-block">
                        	Login >
                        </apex:outputLink>
					</div>
				</div>
				<div class="slds-container--large slds-container--center align-bottom banner-tint">
					<p class="text-medium text-color-white padding-5-20">Registration</p>
				</div>
			</div>
			<apex:form id="registration-form">
		    	<section class="global-content-w-footer" id="registration-section">
			    <div class="slds">
				    <div class="slds-container--large slds-container--center">
				    	<div class="slds-grid slds-wrap subcontainer">
				    		<div class="slds-grid slds-wrap slds-container--center slds-container--medium slds-clearfix slds-m-top--medium clearfix">
				    			<div class="slds-size--1-of-1 slds-p-around--small">
					    			<div class="slds-max-small-buttons--stretch slds-max-small-buttons--stacked ">
					    				<apex:commandButton action="{!login}" reRender="messages" value="Save" styleClass="slds-button slds-button--neutral" oncomplete="ShowApexMessages();"/>
					    			
					    				<apex:commandButton action="{!login}" reRender="messages" value="Submit" styleClass="slds-button slds-button--neutral" oncomplete="ShowApexMessages();"/>
					    			
					    				<apex:commandButton action="{!login}" reRender="messages" value="Cancel" styleClass="slds-button slds-button--neutral" oncomplete="ShowApexMessages();"/>
					    			</div>
				    			</div>
				    		</div>
				    	</div>
				    </div>
			    </div>
				</section>
			</apex:form>
			<c:Damac_Footer ></c:Damac_Footer>
		</apex:insert>

	</div>
</body>
</html>
</apex:page>