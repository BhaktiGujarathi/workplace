<apex:page sidebar="false" showHeader="false" controller="DamacForgotPasswordController" applyBodyTag="false" applyHtmlTag="false" showChat="false" showQuickActionVfHeader="false" standardStylesheets="false" cache="true" expires="0">
<html>
    <head>
    	<link rel="shortcut icon" href="{!URLFOR($Resource.Inquiry_Resources,'assets_inquiry/images/favicon.ico')}" type="image/x-icon"/>
    	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    	<meta content="utf-8" http-equiv="encoding"/>
    	<meta name="viewport" content="width=device-width, initial-scale=1"/>
    	<title>DAMAC Agent Portal- Forgot Password</title>
    	<apex:stylesheet value="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    	<apex:stylesheet value="{!URLFOR($Resource.AgentPortal_Resources, 'assets/css/salesforce-lightning-design-system-vf.css')}" />

    	<apex:stylesheet value="{!URLFOR($Resource.AgentPortal_Resources, 'assets/css/damac-theme.css')}" />
    	<style>
    	#forgotpassword-section input,#forgotpassword-section button{
    		border-radius: 0px !important;
    		font-family: Arial,sans-serif;
    	}
    	</style>
    	
    </head>
<body >
	<div class="global-wrapper body-bg">
		<apex:insert name="body">
		    <section class="global-content" id="forgotpassword-section">
			    <div class="slds">
			        <apex:form id="forgotPasswordForm" forceSSL="true">
			        	<apex:pageMessages id="messages"></apex:pageMessages>
			            <section class="slds-text-align--center slds-p-around-small slds-p-bottom--xx-large banner-tint" role="banner">
			           		
				            <div class="slds-container--center slds-container--small slds-p-around--x-large slds-size--1-of-1  slds-medium-size--4-of-12 slds-large-size--4-of-12">
				            	<div class="slds-p-around--small">
				            		<img src="{!URLFOR($Resource.AgentPortal_Resources, 'assets/images/logo.png')}"/>

				            	</div>
				            	<div class="slds-p-around--small uppercase text-xx-large text-color-white">
				            		live the luxury
				            	</div>
					                
			                    <div class="slds-text-longform slds-text-align--left slds-p-around--large">
			                        <h4 class="text-medium text-color-white slds-p-bottom--small">Having trouble logging in?</h4>
			                        <ul>
			                            <li class="text-medium text-color-white">Usernames are in the form of email address.</li>
			                            <li class="text-medium text-color-white">Passwords are case sensitive</li>                            
			                        </ul>
			                        <h4 class="text-color-white slds-p-bottom--small">To reset yout password enter your username</h4>
			                        <div class="slds-form-element">
			                            <div class="slds-form-element__control">
			                              <apex:inputText id="username" value="{!username}" styleClass="slds-input input-textbox-large" html-placeholder="User name"/>
			                            </div>
			                        </div>
			                       
			                        <div class="slds-max-small-buttons--stretch slds-max-small-buttons--stacked slds-small-buttons--horizontal slds-p-top--medium slds-clearfix">
			                            <a class="slds-button slds-button--inverse slds-float--left" href="{!URLFOR($Page.Damac_Login,null)}">Cancel</a>
			                            <apex:commandButton id="continue" value="Continue" action="{!forgotPassword}" styleClass="slds-button slds-button--neutral slds-float--right" reRender="messages" oncomplete="ShowApexMessages();"/>
			                        </div>
			                        
			                    </div>
					            
				            </div>
				            
			        	</section>
			        </apex:form>
			    </div>
		    </section>
		   
	    </apex:insert>
    </div>
    <script src="{!URLFOR($Resource.AgentPortal_Resources, 'assets/js/alerts.js')}"></script>
    <script src="{!URLFOR($Resource.AgentPortal_Resources, 'assets/js/jquery.min.js')}"></script>
    <script>
    	function ShowApexMessages()
    {    
        if($('[id$=messages]').text() != '')
        {    
              var msg = $('[id$=messages]').text();              
              if(msg.search("Success:") >= 0){
                  $('[id$=messages]').hide();
                  
                 notie.alert(1,$('[id$=messages]').text().replace('Success:',''),10);
              }
              else
              {
                 $('[id$=messages]').hide();
                 notie.alert(3,$('[id$=messages]').text().replace('Error:','').replace('Errors',''),10);
              }
        }

    }
    </script> 
</body>

</html>	
</apex:page>