<apex:page id="myPage" standardController="Contact" extensions="Contact_Edit_Delete_Override_Controller" sidebar="false" showHeader="false">
    <script>
    
    if ( {!canEditRecord} ) {
        window.parent.location.href = "{!URLFOR($Action.Contact.Edit,Contact.id,[retURL=URLFOR($Action.Contact.View,Contact.id)],true)}";
    } else {
        alert("You are not allowed to edit the Contact.");
        window.history.go(-1);
    }
    </script>
</apex:page>