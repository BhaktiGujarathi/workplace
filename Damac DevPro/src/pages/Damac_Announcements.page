<apex:page standardStylesheets="false" controller="DamacAnnouncementsController">
<html>
    <head>
        
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta content="utf-8" http-equiv="encoding"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>Notifications</title>
        <apex:stylesheet value="{!URLFOR($Resource.AgentPortal_Resources, 'assets/css/dataTable.css')}" />
        <style>
           

            .annoucement table{
                width: 100%;
            }
            
            .table-bordered>thead>tr>th{
               font-size:14px !important;
               color:#FFFFFF !important;
               border:1px solid #ddd !important;
               background:#000000 !important;
            }

            .table-bordered>tbody>tr>td,td{
                font-size:13px !important;
                color:#000000 !important;
                border:1px solid #ddd !important;
            }
           
            .table-bordered, .table-bordered>tbody>tr>td, .table-bordered>tbody>tr>th,.table-bordered>thead>tr>td, .table-bordered>thead>tr>th{
                padding:10px !important;
                font-family:Arial,sans-serif !important;
            }

            .global-content-w-footer{
                padding-bottom:150px;
            }

            .more-data a{
                font-size:13px !important;
                cursor:pointer !important;
            }
            
            .dataTables_filter{
                width:100% !important;
            }
            
            .title{
                cursor:pointer !important;
            }
            
         
            label,p{
            	margin:0px !important;
            }
            
              .dataTables_filter{
                margin:0px;
            	padding-bottom:10px !important;
            }

        </style>
    </head>
<body >
       
        <div class="global-wrapper content-bg annoucement">
            <div class="global-content-w-footer">
                <apex:pageMessages id="messages"></apex:pageMessages>
                <div style="padding:10px !important;background:#FFFFFF !important" class="table-responsive height-100vh">
                 <table class="table responsive custom-table">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <apex:repeat value="{!announcementList}" var="aWrap">
                            <tr data-expanded="true">
                                <td class="title" onclick="window.location.href='{!URLFOR($Page.Damac_Announcement_Detail,null)}?Id={!aWrap.Id}'">
                                    {!aWrap.Title__c}
                                </td>
                                <td>
                                    <apex:outputText value="{0,date,MM/dd/yyyy}"> <apex:param value="{!aWrap.Start_Date__c}" /> </apex:outputText>
                                </td>
                                <td>
                                    <apex:outputText value="{0,date,MM/dd/yyyy}"> <apex:param value="{!aWrap.End_Date__c}" /> </apex:outputText>
                                </td>

                            </tr>
                        </apex:repeat>
                    </tbody>        
                </table>
                </div>
            </div>
        </div>
       
      
        <script type="text/javascript" src="{!URLFOR($Resource.AgentPortal_Resources, 'assets/js/datatable.js')}"></script>
        <script type="text/javascript" src="{!URLFOR($Resource.AgentPortal_Resources, 'assets/js/datatable.responsive.min.js')}"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script> 
        <script type="text/javascript" src="https://cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
    <script>
        $('.page-name').text('Announcements');
        
        $(document).ready(function(){

            
            $('.custom-table').DataTable({
                "bInfo": false,
                "pageLength": 10,
                "language": {
                    "search": "<p class='SearchTitle'>Search</p>"
                },
                "autoWidth": true,
                "lengthMenu": [10, 25, 50, 100],
                dom: 'lBfrtip',
                 buttons: [
                     ],
                "order": [],
                "oSearch": {"bSmart": false},
                columnDefs: [
                   { type: 'de_date', targets: [1,2] }
                 ],
                "aaSorting": []
            });
            $('.custom-table tr>td>span>a').each(function(i, link){
                $(link).replaceWith($(link).text())
            });
            
             /*Date Sorting*/
             jQuery.extend(jQuery.fn.dataTableExt.oSort, {
                "de_date-asc": function(a, b) {
                    var c, d;
                    if ("" !== jQuery.trim(a)) {
                        var e = jQuery.trim(a).match(/>([^<]*)/),
                            f = a.split("/");
                        c = 1 * (parseInt(f[2]) + parseInt(f[1]) + parseInt(f[0]))
                    } else c = 1 / 0;
                    if ("" !== jQuery.trim(b)) {
                        var e = jQuery.trim(b).match(/>([^<]*)/),
                            g = b.split("/");
                        d = 1 * (parseInt(g[2]) + parseInt(g[1]) + parseInt(g[0]))
                    } else d = 1 / 0;
                    var h = c < d ? -1 : c > d ? 1 : 0;
                    return h
                },
                "de_date-desc": function(a, b) {
                    var c, d;
                    if ("" !== jQuery.trim(a)) {
                        var e = jQuery.trim(a).match(/>([^<]*)/),
                            f = a.split("/");
                        c = 1 * (parseInt(f[2]) + parseInt(f[1]) + parseInt(f[0]))
                    } else c = 1 / 0;
                    if ("" !== jQuery.trim(b)) {
                        var e = jQuery.trim(b).match(/>([^<]*)/),
                            g = b.split("/");
                        d = 1 * (parseInt(g[2]) + parseInt(g[1]) + parseInt(g[0]));
                    } else d = 1 / 0;
                    var h = c < d ? 1 : c > d ? -1 : 0;
                    return h
                }
            });
        });

      
        
    </script>
   
</body>
</html>

</apex:page>