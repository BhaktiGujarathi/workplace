<apex:page id="communitiesSelfRegPage" 
           showHeader="true" 
           controller="CommunitiesSelfRegController" title="{!$Label.site.user_registration}">
        <apex:define name="body">  
        <center>
        <apex:form id="theForm" forceSSL="true">
            <apex:pageMessages id="error"/>
            <apex:panelGrid columns="2" style="margin-top:1em;">
                <apex:outputLabel value="First Name" for="firstName"/>
                <apex:inputText required="true" id="firstName" value="{!model.firstName}" label="First Name"/>
                <apex:outputLabel value="Last Name" for="lastName"/>
                <apex:inputText required="true" id="lastName" value="{!model.lastName}" label="Last Name"/>

                <apex:outputLabel value="{!$Label.site.email}" for="email"/>
                <apex:inputText required="true" id="email" value="{!model.email}" label="{!$Label.site.email}"/>

                <apex:outputLabel value="{!$Label.cc_userreg_phone}" for="phone"/>
                <apex:inputText required="true" id="phone" value="{!model.phone}" label="{!$Label.cc_userreg_phone}"/>
                
                <apex:outputpanel rendered="{!model.hasMulipleAccounts}">
                    <apex:outputpanel >
                        <apex:outputLabel value="Party Id" for="Partyid"/>
                    </apex:outputpanel>
                    <apex:outputpanel >
                        <apex:inputText id="partyid" value="{!model.partyId}" label="Party id" />
                    </apex:outputpanel>
                </apex:outputpanel>
                
                <apex:outputLabel value="{!$Label.site.password}" for="password"/>
                <apex:inputSecret id="password" value="{!model.password}"/>

                <apex:outputLabel value="{!$Label.site.confirm_password}" for="confirmPassword"/>
                <apex:inputSecret id="confirmPassword" value="{!model.confirmPassword}"/>

                <apex:outputText value=""/>
                <apex:commandButton action="{!registerUser}" value="{!$Label.site.submit}" id="submit"/>

            </apex:panelGrid> 
            <br/>
        </apex:form>
        </center>
      <br/>
    </apex:define>

</apex:page>