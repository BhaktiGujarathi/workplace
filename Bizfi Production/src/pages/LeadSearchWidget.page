<apex:page controller="LeadSearchWidgetController" showHeader="false" sidebar="false">
    
    <style>
        
        body {
            background: #cfeef8;
        }

        .input-search {
            padding: 2px 5px;
            font-size: 15px;
            background-color: #fff;
            border: 1px solid #999;
            height: 20px;
            width: 90%;
            border-radius: 4px;     
        }

    </style>

    <apex:form id="leadSearch">

        <div style="text-align: center;">   
            
            <apex:outputPanel rendered="{!showSearch}">
                <apex:inputText value="{!searchId}" styleClass="input-search" size="8" /><br />
                <apex:commandButton value="Search" action="{!searchLead}" rerender="leadSearch" />
            </apex:outputPanel>

            <apex:outputPanel rendered="{!showName}">
                <h3>{!leadName}</h3><br />
                <apex:commandButton value="Cancel" action="{!cancel}" rerender="leadSearch" style="margin-top: 10px;" />
                <apex:commandButton value="Assign Lead" action="{!assignLead}" rerender="leadSearch" />
            </apex:outputPanel>

            <apex:outputPanel rendered="{!showLink}">
                <br />
                <h3><a href="/{!leadId}" target="_top">Open Lead</a></h3>
                <br />
            </apex:outputPanel>
        </div>

    </apex:form>

</apex:page>