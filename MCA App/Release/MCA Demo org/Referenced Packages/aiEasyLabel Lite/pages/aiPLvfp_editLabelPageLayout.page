<apex:page docType="html-5.0" controller="aiell.aiPLctl_documentLabel" action="{!mLabelPageLayoutBuilder}">
	<head>
		<style type="text/css">
			.ErrorMessage{
				color: red;
				font-weight: bold;
			}
		</style>
	</head>
	<body>
		<apex:form >
		
		    <apex:pageBlock title="Label for {!pLabelPageLayoutSelected.Name}" mode="edit">
		    	<apex:facet name="header">
				    <img src="{!URLFOR($Resource.ai_Resources, 'images/aiEasyLabelLogo.png')}" style="width:50px;height:50px;" class="aiEasyLabelLogo" onclick="window.open('http://www.alpha-index.co.uk/aiEasyLabel');"/>
					<h3 class="mainTitle">&nbsp;Label for {!pLabelPageLayoutSelected.Name}</h3>
				</apex:facet>
		    	<apex:pageBlockButtons >
			        <apex:commandButton value="Save" action="{!mSaveEditLabelPageLayout}"/>
			        <apex:commandButton value="Cancel" action="{!mCancelEditLabelPageLayout}"/>
    			</apex:pageBlockButtons>    
		   		<apex:pageMessages ></apex:pageMessages>
				<apex:pageBlockSection title="General">
					<apex:pageBlockSectionItem >
						<apex:outputLabel value="Name" for="labelPageLayoutNameInput" />
						<apex:outputPanel >
							<div class="requiredInput">
	                    		<div class="requiredBlock"></div>
								<apex:inputField id="labelPageLayoutNameInput" value="{!pLabelPageLayoutSelected.Name}" label="Name"/>
								<apex:outputText value="Error: You must enter a value" styleClass="ErrorMessage" rendered="{!pErrorLabelPageLayoutName}"/>
							</div>
						</apex:outputPanel>
					</apex:pageBlockSectionItem>
					
					<apex:pageBlockSectionItem >
						<apex:outputLabel value="Label Height" for="LabelHeightInput"/>
						<apex:outputPanel >
							<apex:inputField id="LabelHeightInput" value="{!pLabelPageLayoutSelected.aiell__LabelHeight__c}"/>
							<apex:outputText value="mm"/><br/>
							<apex:outputText value="Error: You must enter a decimal greater than 0" styleClass="ErrorMessage" rendered="{!pErrorLabelPageLayoutHeight}"/>
						</apex:outputPanel>
					</apex:pageBlockSectionItem>
					<apex:pageBlockSectionItem >
						<apex:outputLabel value="Label Width" for="LabelWidthInput"/>
						<apex:outputPanel >
							<apex:inputField id="LabelWidthInput" value="{!pLabelPageLayoutSelected.aiell__LabelWidth__c}"/>
							<apex:outputText value="mm"/><br/>
							<apex:outputText value="Error: You must enter a decimal greater than 0" styleClass="ErrorMessage" rendered="{!pErrorLabelPageLayoutWidth}"/>
						</apex:outputPanel>
					</apex:pageBlockSectionItem>
				</apex:pageBlockSection>
				
			</apex:pageBlock>
	        
		</apex:form>
	</body>
</apex:page>