<apex:page controller="ondeck.OnDeckSetupController" tabStyle="OnDeck_Settings__tab">

    <style>
        .message {
            margin: 4px 0px !important;
        }
    </style>   

    <apex:sectionHeader title="OnDeck Setting" />

    <apex:pageMessages />
    
    <p style="font-size: 109%;">If you have received your credentials from OnDeck, please enter it here.</p>
    
    <apex:form >

        <apex:pageBlock title="OnDeck API Credentials">
            <apex:pageBlockButtons >
                <apex:commandButton value="Save" action="{!saveSettings}" />
            </apex:pageBlockButtons>
            <apex:pageBlockSection columns="1">

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="API Username" />
                    <apex:inputField value="{!settings.ondeck__API_Username__c}" style="width: 200px;" required="true" />
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="API Password" />
                    <apex:inputField value="{!settings.ondeck__API_Password__c}" required="true" styleClass="required-secret-input" />
                </apex:pageBlockSectionItem>

                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="API Id" />
                    <apex:inputField value="{!settings.ondeck__Api_Id__c}" required="true" />
                </apex:pageBlockSectionItem>
                
                <apex:pageBlockSectionItem >
                    <apex:outputLabel value="API Testing" />
                    <apex:inputCheckbox value="{!settings.ondeck__Testing_API__c}"/>
                </apex:pageBlockSectionItem>

            </apex:pageBlockSection>
        </apex:pageBlock>

        <script>
            var input = document.getElementsByClassName('required-secret-input')[0];
            input.type = "password";
        </script>    

    </apex:form>
</apex:page>