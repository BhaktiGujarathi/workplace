<apex:page controller="CalculateIRRController" sidebar="false" showHeader="false" standardStylesheets="false" renderAs="pdf">
 <head>
 
    <h1 style= "border-bottom:thick solid black; width:340px; margin-left:30%; font-size:34px;"> XIRR CALCULATOR </h1>
   
 </head>
 <body>
     <div>
<br/>
<br/>

  <table width ="100%" align="center">
  <tr>
      <td width="75%" ><h2 style="margin-left:110px;">Funding Amount</h2></td>
       <td><span style="font-size:24px;">
       <!--<apex:outputText value="{!fundingAmountString}" style="margin-left:7opx;"  label="Funding Amount"> -->
       <apex:outputText value="${0, number, ###,###,###,###.00}" style="margin-left:7opx;"  label="Funding Amount">
       <apex:param value="{!fundingAmount}"/>
       </apex:outputText></span></td>
  </tr>
  <tr>
      <td><h2 style="margin-left:110px;">Repayment Amount</h2></td>
      <td><span style="font-size:24px;">
      <!--<apex:outputText value="{!payBackAmtString}"  label="Repayment Amount"> -->
      <apex:outputText label="Repayment Amount" value="${0, number, ###,###,###,###.00}"> 
      <apex:param value="{!payBackAmt}"/>
      </apex:outputText></span></td>
  </tr>
  <tr>
      <td><h2 style="margin-left:110px;">Term (Months)</h2></td>
      <td><span style="font-size:24px;">
      <apex:outputText value="{!monthsString}"  label="Term">       
      </apex:outputText></span></td> 
  </tr>
  <tr>
      <td><h2 style="margin-left:110px;">Fees (Revenue)</h2></td>
      <td><span style="font-size:24px;">
      <apex:outputText value="${0, number, ###,###,###,###.00}" label="Fees"> 
      <apex:param value="{!proccessFee}"/>
      </apex:outputText>
      </span></td> 
  </tr>
  <tr>
      <td><h2 style="margin-left:110px;">Commissions (Expenses)</h2></td>
       <td><span style="font-size:24px;">
       <!--<apex:outputText value="{!commissionAmtString}" label="Commissions">-->
       <apex:outputText label="Commissions" value="${0, number, ###,###,###,###.00}">
       <apex:param value="{!commissionAmt}"/>
       </apex:outputText>
       </span></td> 
  </tr>
  </table>
  <br/><br/><br/>
  <!-- <apex:outputPanel rendered="{!isIrrCalculated}"> -->
    <table  width="100%" >  
    <tr>
      <td  style="width:40%"> </td>
      <td  style="color:black; font-style:italic; font-size:40px;">  XIRR:</td>
      <td  style="color:black; font-style:italic; font-size:40px;"><apex:outputText value="{!calculatedIrr}"></apex:outputText></td>
      <td  style="width:40%"> </td> 
    </tr>
    
    </table>
<!-- </apex:outputPanel> -->
  

</div>

</body>
</apex:page>