<apex:page controller="SendAnEmailController">
  <apex:form >
    <apex:pageBlock mode="edit">       
            <apex:pageBlockButtons >
                <apex:commandButton id="Send" value="Send"/>
                <apex:commandButton id="SelectTemplate" value="Select Template"/>
                <apex:commandButton id="AttachFile" value="Attach File"/>
                <apex:commandButton id="Cancel" value="Cancel"/>
            </apex:pageBlockButtons>  
            <apex:pageBlockSection columns="1" title="Edit Email">               
               <apex:inputText label="Additional To:"/>
               <apex:inputText label="Cc:"/>
               <apex:inputText label="Bcc:"/>               
                  <apex:pageBlockSectionItem >                        
                        Subject:<apex:outputPanel >                        
                            <div class="requiredInput">
                               <div class="requiredBlock"/>                           
                               <apex:inputText label="Subject" required="true"/>                           
                            </div>
                        </apex:outputPanel>
                   </apex:pageBlockSectionItem>
               <apex:inputTextarea label="Body:" richText="true" />               
            </apex:pageBlockSection>          
    </apex:pageBlock>
    
    <apex:pageBlock title="Attachments">
        <apex:pageblockButtons location="top">
            <apex:commandButton value="Attach File"/>
        </apex:pageblockButtons>
    </apex:pageBlock>
  </apex:form>
</apex:page>