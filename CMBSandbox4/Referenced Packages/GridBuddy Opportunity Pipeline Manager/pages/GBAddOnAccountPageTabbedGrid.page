<apex:page standardController="Account" sidebar="false" showHeader="false">
     
    <apex:tabPanel switchType="client" selectedTab="AccountRelatedObjects" id="AccountTabPanel" tabClass="activeTab" inactiveTabClass="inactiveTab"> 
        
        <apex:tab label="GridBuddy Related Lists" name="EditableRelatedObjects">
            <apex:variable var="gridURL1" value="{!URLFOR($Page.GBLite__Grid, Account.Id, [gname="Account Editable Related Lists", id=Account.Id, sh="0", ssb="0", sbb="1"])}" />
            <apex:variable var="gridURL1_lower" value="{!SUBSTITUTE(SUBSTITUTE(gridURL1, 'Grid?', 'grid?'), 'GBLite', 'gblite')}" />
            <iframe id="gridFrame" scrolling="auto" height="600" width="100%" frameborder="0" src="{!gridURL1_lower}"></iframe>      
        </apex:tab>
        
        <apex:tab label="Contacts with Tasks" name="ContactsWithTasks">
            <apex:variable var="gridURL2" value="{!URLFOR($Page.GBLite__Grid, null, [gname="Contacts with Tasks", fpf="AccountId", fpv=Account.Id, sh="0", ssb="0", sbb="1"])}" />
            <apex:variable var="gridURL2_lower" value="{!SUBSTITUTE(SUBSTITUTE(gridURL2, 'Grid?', 'grid?'), 'GBLite', 'gblite')}" />
            <iframe id="gridFrame_1" scrolling="auto" height="600" width="100%" frameborder="0" src="{!gridURL2_lower}"></iframe>
        </apex:tab>
  
        <apex:tab label="Opportunities with Related Objects" name="OpportunitiesWithRelatedObjects">
            <apex:variable var="gridURL3" value="{!URLFOR($Page.GBLite__Grid, null, [gname="Opportunities with Oppty Products", fpf="AccountId", fpv=Account.Id, sh="0", ssb="0", sbb="1"])}" />
            <apex:variable var="gridURL3_lower" value="{!SUBSTITUTE(SUBSTITUTE(gridURL3, 'Grid?', 'grid?'), 'GBLite', 'gblite')}" />
            <iframe id="gridFrame_2" scrolling="auto" height="600" width="100%" frameborder="0" src="{!gridURL3_lower}"></iframe>
        </apex:tab>
  
    </apex:tabPanel>
    
</apex:page>