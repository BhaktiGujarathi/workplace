<apex:page standardController="Patient_Insurance__c"
           extensions="VobAssignToMe"
           lightningStylesheets="true" action="{!VobAssignToMeMethod}" cache="false">
    
    <apex:outputPanel id="pblock">
    <apex:pageMessages ></apex:pageMessages>
    </apex:outputPanel>
    <apex:includeScript value="/support/console/42.0/integration.js"/>
       
    <apex:form id="PIForm">
    <div style="font-size: 24px;">
    <apex:outputText value="{!Patient_Insurance__c.Name}" />
        </div>
        <div  style="width:50%;padding: 75px 20px 22px 350px;">
        <apex:pageBlock >
            <div style="text-align:center;font-size: 14px;">
        
            <apex:outputText value="VOB is successfully assigned. Do you want to proceed?"></apex:outputText>
        </div>
        
        <div style="text-align:center;font-size: 14px;padding: 15px 15px 15px 15px;">
            <apex:commandButton value="Yes" action="{!RedirectToRecord}" rerender="pblock"/>
            <apex:commandButton value="No" action="{!cancel}"/>
        </div>
        
        </apex:pageBlock>
        </div>
    </apex:form>
</apex:page>